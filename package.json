{
  "name": "meteor-react-playground",
  "description": "Meteor & React starter template for prototyping and playing around.",
  "private": true,
  "scripts": {
    "play": "meteor run -p 7070",
    "test": "meteor test --once --driver-package meteortesting:mocha -p 7080",
    "test-app": "cross-env TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha -p 7080",
    "visualize": "meteor --production --extra-packages bundle-visualizer -p 7080"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.9",
    "meteor-node-stubs": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.3.0",
    "simpl-schema": "^1.12.2"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-load-config": "^4.0.1",
    "tailwindcss": "^3.1.4"
  }
}
